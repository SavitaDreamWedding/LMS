@model Library.Core.Models.BookMaster
<div class="modal fade" id="bookModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="bookForm">
                <div class="modal-header">
                    <h5 class="modal-title">@(Model.BookId == 0 ? "Add" : "Edit") Book</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(m => m.BookId)
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Title)
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Author)
                        @Html.TextBoxFor(m => m.Author, new { @class = "form-control", required = "required" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.ISBN)
                        @Html.TextBoxFor(m => m.ISBN, new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.TotalCopies)
                        @Html.TextBoxFor(m => m.TotalCopies, new { @class = "form-control", type = "number" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.AvailableCopies)
                        @Html.TextBoxFor(m => m.AvailableCopies, new { @class = "form-control", type = "number" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $("#bookForm").submit(function (e) {
        e.preventDefault();
        $.ajax({
            url: "/Books/Save",
            type: "POST",
            data: $(this).serialize(),
            success: function (res) {
                if (res.success) {
                    $("#bookModal").modal("hide");
                    location.reload();
                } else {
                    alert(res.message);
                }
            }
        });
    });
</script>
